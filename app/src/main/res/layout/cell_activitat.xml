<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/accountIcon"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="@drawable/ic_info" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accountTitol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="15sp"
            android:textColor="@android:color/black"
            android:text="Passeig MarÃ­tim"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/accountDiff"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/ic_walker" />

            <TextView
                android:id="@+id/accountDistancia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center|end"
                android:text="Recorregut: 2.500m"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/accountIsAcces"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_margin="5sp"
            android:background="@drawable/accessible_icon_enabled" />

        <ImageView
            android:id="@+id/accountIsCoop"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_margin="5sp"
            android:background="@drawable/coop_icon_enabled" />
    </LinearLayout>

</LinearLayout>